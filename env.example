# Copy this file to .env and update with your actual values
# NEVER commit .env to version control - it's already in .gitignore

# ==================================
# Database Configuration
# ==================================
POSTGRES_DB=n8n
POSTGRES_USER=n8ndbuser
POSTGRES_PASSWORD=change_me_to_secure_password

# ==================================
# n8n Configuration
# ==================================
# Your domain name for n8n (without protocol)
N8N_HOST=n8n.yourname.synology.me

# Full webhook URL (with protocol)
WEBHOOK_URL=https://n8n.yourname.synology.me

# Encryption key - MUST generate a new one!
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=change_me_generate_new_key_with_openssl_rand_hex_32

# Protocol (https recommended for production)
N8N_PROTOCOL=https

# External port for n8n (default: 5678)
N8N_PORT=5678

# Secure cookie setting (set to false if not using HTTPS)
N8N_SECURE_COOKIE=true

# ==================================
# System Configuration
# ==================================
# Timezone (see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TIMEZONE=America/New_York

# Data storage path on your Synology NAS
DATA_PATH=/volume1/docker/n8n 